/* pages/index/index.wxss，样式文件 */
page{
  height: 100%;
  background: #FB7299;
}
.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}
.userName {
  font-size: 32rpx;
  font-weight: bold;
  margin: 100rpx 0;
}
.goStudy {
  width: 200rpx;
  height: 80rpx;
  margin-top: 100rpx;
  font-size: 28rpx;
  border: 1rpx solid black;
  text-align: center;
  line-height:  80rpx;
  border-radius: 10rpx;
}
.getUserInfoBtn {
  font-size: 32rpx;
  border: 1rpx solid black;
  border-radius: 10rpx; 
  background:  #FB7299;
}